---
import { Image } from 'astro:assets';
import background_4 from '../../assets/images/background-4.png';
---

<section id="como-funciona" class="relative bg-[--accent] text-white py-80 overflow-hidden flex items-center bg-gradient-to-b from-black via-black/10 to-transparent">
  <div class="relative z-10 max-w-6xl mx-auto px-6 flex flex-col lg:flex-row items-center justify-between w-full min-h-[400px]">
    <div class="w-full lg:w-1/2 flex items-center justify-start">
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-left" style="font-family: 'Allerta Stencil', sans-serif;">
        CONVIERTE <br> CADA DATO <br> EN PODER <br> PRODUCTIVO
      </h1>
    </div>
    <div class="w-full lg:w-1/2 flex items-center justify-end mt-8 lg:mt-0 h-full">
      {/* Puedes agregar contenido aqu√≠ si lo necesitas */}
    </div>
  </div>
  <div
    class="absolute top-0 right-0 h-full w-1/2 overflow-hidden"
    style="clip-path: polygon(100% 100%, 0 100%, 5% 67%, 3% 40%, 21% 17%, 52% 2%, 100% 0); -webkit-clip-path: polygon(100% 100%, 0 100%, 5% 67%, 3% 40%, 21% 17%, 52% 2%, 100% 0);"
  >
    <div class="relative h-full w-full">
      <Image 
        src={background_4} 
        alt="Background data power" 
        class="h-full w-full object-cover"
        width={960}
        height={1080}
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black via-black/10 to-transparent"></div>
    </div>
  </div>
</section>