---
import { Image } from 'astro:assets';
import background_2 from '../../assets/images/background-2.png';
---

<section id="inicio" class="relative w-full h-screen">
  <Image 
    src={background_2} 
    alt="Background hero" 
    class="absolute inset-0 w-full h-full object-cover"
    width={1920}
    height={1080}
    loading="eager"
  />
  <div class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(to bottom, transparent 70%, black 100%);"></div>
  
  <!-- Contenido que irá sobre la imagen -->
  <div class="absolute bottom-32 left-0 right-0 flex items-center justify-center z-10">
    <a href="#contacto" class="bg-[--accent] text-white px-4 py-2 rounded hover:bg-cyan-600 w-auto inline-block">
      Contáctanos
    </a>
  </div>
</section>

